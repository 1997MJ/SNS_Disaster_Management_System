package Project.a.controller;

import java.util.Arrays;

import org.springframework.beans.factory.annotation.Autowired;

import org.springframework.web.bind.annotation.PostMapping;

import org.springframework.web.bind.annotation.RestController;

import io.github.flashvayne.chatgpt.dto.chat.MultiChatMessage;
import io.github.flashvayne.chatgpt.service.ChatgptService;

@RestController
public class ChatbotController {
	
	@Autowired
	private ChatgptService chatgptService;

	@PostMapping(value="chatbot")
	public String chatbot(String message){
		System.out.println(message);
		String responseMessage = chatgptService.multiChat(Arrays.asList(new MultiChatMessage("user",message)));
	   // String responseMessage = chatgptService.sendMessage(message);
	    System.out.print(responseMessage); //I'm doing well, thank you. How about you?
	    return  responseMessage;
	}
	

	
	
}
	
	

